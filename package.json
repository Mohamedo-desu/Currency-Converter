{
  "name": "convertly_app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "build:android": "eas build --platform android --profile preview",
    "offline": "expo start --offline",
    "publish:expo": "eas update --branch preview && npx sentry-expo-upload-sourcemaps dist",
    "publish:sentry": "bunx sentry-expo-upload-sourcemaps dist",
    "upgrade": "bun install expo@latest && bunx expo install --fix",
    "android": "bunx expo run:android --device",
    "release:android": "bunx expo run:android --device --variant Release",
    "release:ios": "bunx expo run:ios --configuration Release",
    "test": "jest --watchAll",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "ios": "expo run:ios"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-navigation/native": "^7.0.14",
    "@sentry/react-native": "~6.3.0",
    "expo": "~52.0.33",
    "expo-application": "~6.0.2",
    "expo-constants": "~17.0.5",
    "expo-font": "~13.0.3",
    "expo-quick-actions": "^4.0.2",
    "expo-router": "~4.0.17",
    "expo-splash-screen": "~0.29.21",
    "expo-status-bar": "~2.0.1",
    "expo-system-ui": "~4.0.8",
    "expo-updates": "~0.26.17",
    "react": "18.3.1",
    "react-native": "0.76.7",
    "react-native-country-flag": "^2.0.2",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-mmkv": "^3.2.0",
    "react-native-reanimated": "~3.16.1",
    "react-native-responsive-fontsize": "^0.5.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-size-matters": "^0.4.2",
    "vexo-analytics": "^1.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.3",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.3.3"
  },
  "private": true,
  "trustedDependencies": [
    "@sentry/cli"
  ]
}
